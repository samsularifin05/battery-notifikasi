{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Batrey - Notifikasi",
  "version": "1.0.0",
  "identifier": "com.samsularifin.batrey-app-nitifikasi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Battery Notifikasi",
        "width": 400,
        "height": 226,
        "resizable": false,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/battery-status.png",
      "iconAsTemplate": false
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
    
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
